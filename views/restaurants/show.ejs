<% layout("layouts/boilerplate") %>
<div class="row">
  <div class="col-md-6">
    <h1><%= restaurant.name %></h1>
    <h2><%= restaurant.location %></h2>
    <footer>
      <a href="/restaurants/<%=restaurant._id%>/edit">Edit Restaurant</a>
      <a href="/restaurants">All Restaurants</a>
    </footer>
    <form
      action="/restaurants/<%= restaurant._id %>?_method=DELETE "
      method="post"
    >
      <button>Delete</button>
    </form>
  </div>
  <div class="col-md-6">
    <div class="card text-center offset-4" style="width: 30rem">
      <div class="card-header">Leave a Review</div>
      <form
        action="/restaurants/<%=restaurant._id%>/reviews"
        method="POST"
        novalidate
        class="needs-validation"
      >
        <div class="card-body">
          <label for="rating" class="form-label">Rating</label>
          <input
            class="form-range"
            type="range"
            min="1"
            max="5"
            id="rating"
            name="review[rating]"
          />
        </div>
        <div>
          <label for="body" class="form-label">How was it?</label>
          <textarea
            class="form-control"
            name="review[body]"
            id="body"
            cols="5"
            rows="3"
            required
          ></textarea>
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Please Provide a Valid Review</div>
        </div>
        <button class="btn btn-sm btn-success offset-10 mb-1">Submit</button>
      </form>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6">placeholder</div>
  <div class="col-md-6">
    <div
      class="card offset-4 overflow-auto mb-3"
      style="width: 30rem; height: 45vh"
    >
      <div class="card-header text-center sticky-top bg-light">Reviews</div>
      <% for(let review of restaurant.reviews) {%>
      <div class="card">
        <div class="card-body">
          <p>Rating: <%= review.rating %></p>
          <p>Review: <%= review.body %></p>
          <form
            action="/restaurants/<%=restaurant._id%>/reviews/<%=review._id%>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-danger btn-sm">Delete</button>
          </form>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
